<h1 style="text-align: center; margin-top: 30px;">Bienvenue sur the Hacking Gossip !</h1>
<h4 style="margin-left: 10px;" > <%=link_to"Créer un nouveau gossip", new_gossip_path%></h4>
<p style="margin-left: 10px;">Voici la liste des différents gossips...</p>


<% @gossip.each do |gossip| %>
    <h2><%=  gossip.title %></h2>
    <h2><%=  gossip.content %></h2>
  <p>
  <a href= "<%= edit_gossip_path(gossip.id) %>" class = "btn btn-primary"> Editer</a>
  <a href= "<%= gossip_path(gossip.id) %>" class = "btn btn-primary"> Voir Gossip </a>
  </p>
  <% end %>


