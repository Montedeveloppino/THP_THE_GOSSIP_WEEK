<h1>Le show</h1>
<p>Titre : <%= @gossips.title %></p>
<p>Contenue : <%= @gossips.content %></p>

<%= link_to "edit", edit_gossip_path%>      
<%= link_to 'Delete', @gossip, method: :delete %><br/><br/>
<a href="/gossip">Revenir au menu<a>


<h5 style="margin-top: 60px;">Commentaires</h5>
   <div> 
   <form action='/comments' method='POST'>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label style="margin-left: 10px;">Ecrit ton commentaire</label> <br/>  
    <textarea rows="2" cols="50" style="margin-left: 20px;" name="comment" ></textarea>
    <input type="hidden" value="<%= @gossips.id %>" name="gossip_id">
    <input type='submit'/>
    </form>
  </div> 

   
  <% @comments.each_with_index do |j| %>
  <h6>Anonymous :</h6> 
    <p style="margin-left: 10px;">
   <%= j.comment %><br/>
  </p>
  <% end %>


  
  
